<%- include('./layouts/main') %>

<div class="col-sm-10 mt-3">
  <h1><%= title %>: <%= bookinstance._id %></h1>
  <p><strong>Imprint:</strong> <%= bookinstance.imprint %></p>
  <p><strong>Status:</strong> <span class="<%= bookinstance.status == 'Available' ? 'text-success' : bookinstance.status == 'Maintenance' ? 'text-danger' : 'text-warning' %>"><%= bookinstance.status %></span></p>

  <p>Do you really want to delete this Book copy?</p>
  <form action="" method="post">
      <input type="hidden" name="bookinstanceid" id="bookinstanceid" value="<%= bookinstance._id %>">
      <button class="btn btn-danger" type="submit">Delete</button>
  </form>
</div>