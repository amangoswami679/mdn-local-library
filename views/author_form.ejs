<%- include('./layouts/main') %>

<div class="col-sm-10 mt-3">
  <h1><%= title %></h1>
  <form action="" method="post">
    <div class="row g-2">
      <div class="col-md-6">
        <div class="form-floating mb-3">
          <input type="text" name="first_name" id="first_name" class="form-control" placeholder="First name" required value="<%= typeof author !== 'undefined' ? author.first_name : '' %>">
          <label for="first_name" class="form-label">First Name</label>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-floating mb-3">
          <input type="text" name="family_name" id="family_name" class="form-control" placeholder="Family name (Surname)" required value="<%= typeof author !== 'undefined' ? author.family_name : '' %>">
          <label for="family_name" class="form-label">Family Name</label>
        </div>
      </div>
    </div>
    <div class="row g-2">
      <div class="col-md-6">
        <div class="form-floating mb-3">
          <input type="date" name="date_of_birth" id="date_of_birth" class="form-control" placeholder='dd/mm/yyyy' value="<%= typeof author !== 'undefined' ? author.date_of_birth_formatted : '' %>">
          <label for="date_of_birth" class="form-label">Date of Birth</label>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-floating mb-3">
          <input type="date" name="date_of_death" id="date_of_death" class="form-control" placeholder='dd/mm/yyyy' value="<%= typeof author !== 'undefined' ? author.date_of_death_formatted : '' %>">
          <label for="date_of_death" class="form-label">Date of Death</label>
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <% if (typeof errors !== 'undefined' && errors) { %>
    <ul>
      <% errors.forEach(error => { %>
        <li class="text-danger"><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
</div>